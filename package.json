    "sass-loader": "^11.0.1",
    "standard": "^16.0.3",
    "style-loader": "^2.0.0",
    "vue-loader": "^15.9.8",
    "vue-router": "^3.5.3",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.7.0"
  },
  "nodemonConfig": {
    "ext": "js,json,yaml,njk,scss,env",
    "watch": [
      "*.*",
      ".env"
    ],
    "ignore": "base.njk"
  }

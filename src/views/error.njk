{% extends "page.njk" %}

{% block content %}
{# {{error | dump}} #}
  <h1 class="text-center text-danger">Something went wrong</h1>
  {% if error.validation %}
    <h2>Invalid Input</h1>
    <h3>{{ error.validationContext | capitalize }}</h2>
    <ul>
      {% for issue in error.validation %}
        <li>
          {% if issue.dataPath %}
            {{ issue.dataPath }}
          {% endif %}
          {{ issue.message }}
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>{{ error.message }}</p>
  {% endif %}
{% endblock %}
